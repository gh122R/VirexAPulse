#!/usr/bin/env php
<?php

use App\Core\Facades\Command;

require_once __DIR__ . '/src/app/Core/Bootstrap/bootstrap.php';


$command = strtolower($argv[1] ?? null);
$name = $argv[2] ?? null;
$type = $argv[3] ?? null;

switch ($command) {
    case 'serve':
        Command::serve();
        break;

    case 'make:controller':
        echo Command::makeController($name, $type);
        break;

    case 'make:model':
        echo Command::makeModel($name);
        break;

    case null:
        echo "Ð’Ð²ÐµÐ´Ð¸Ñ‚Ðµ ÐºÐ¾Ð¼Ð°Ð½Ð´ÑƒðŸ¤’.\n";
        break;

    default:
        echo "ÐÐµÐ¸Ð·Ð²ÐµÑÑ‚Ð½Ð°Ñ ÐºÐ¾Ð¼Ð°Ð½Ð´Ð°: $command\n";
